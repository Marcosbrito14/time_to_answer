<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Listando Administradores</h1>
  </div>
</div>

<%#= @admins.inspect %>
<div class="table-responsivo">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>Email</th>
        <th>
          <%= link_to new_admins_backoffice_admin_path, class:"btn btn-success btn-circle btn-sm" do %>
            <i class="fa fa-plus"></i>
          <% end %>
        </th>
      </tr>
    </thead>
    <tbody>
      <% @admins.each do |admin| %>
        <tr>
          <td><%= admin.id %></td>
          <td><%= admin.email %></td>
          <td style="width: 5px">
            <div class="btn-group">

              <%= link_to edit_admins_backoffice_admin_path(admin), class:"btn btn-primary btn-circle btn-sm" do %>
                <i class="fa fa-edit"></i>
              <% end %>
              <!--<button type="button" class="btn btn-primary btn-circle btn-sm">
                <i class="fa fa-edit"></i>
              </button>-->

              <%= link_to admins_backoffice_admin_path(admin), data: { turbo_method: :delete, turbo_confirm: "Tem certeza?" }, class:"btn btn-danger btn-circle btn-sm" do %>
                <i class="fa fa-minus"></i>
              <% end %>
            <!--<button type="button" class="btn btn-danger btn-circle btn-sm">
                <i class="fa fa-minus"></i>
              </button>-->
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
