<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Listando Perguntas</h1>
  </div>
</div>
<br>
<%#= @admins.inspect %>
<div class="table-responsivo">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th><%= translate_attribute(@questions, :description) %></th>
        <th><%= translate_attribute(@questions, :subject) %></th>
        <!--
          Helper utilizado p/ traduzir os atributos
          <th><%#= @questions.model.human_attribute_name(:description) %></th>
        <th><%#= @questions.model.human_attribute_name(:subject) %></th>
      -->
        <th>
          <%= link_to new_admins_backoffice_question_path, class:"btn btn-success btn-circle btn-sm" do %>
            <i class="fa fa-plus"></i>
          <% end %>
        </th>
      </tr>
    </thead>
    <tbody>
      <% @questions.each do |question| %>
        <tr>
          <td><%= question.id %></td>
          <td><%= question.description.truncate(50) %></td>
          <td><%= question.subject.description.truncate(30) %></td>
          <td style="width: 5px">
            <div class="btn-group">

              <%= link_to edit_admins_backoffice_question_path(question), class:"btn btn-primary btn-circle btn-sm" do %>
                <i class="fa fa-edit"></i>
              <% end %>
              <!--<button type="button" class="btn btn-primary btn-circle btn-sm">
                <i class="fa fa-edit"></i>
              </button>-->

              <%= link_to admins_backoffice_question_path(question), data: { turbo_method: :delete, turbo_confirm: "Tem certeza?" }, class:"btn btn-danger btn-circle btn-sm" do %>
                <i class="fa fa-minus"></i>
              <% end %>
            <!--<button type="button" class="btn btn-danger btn-circle btn-sm">
                <i class="fa fa-minus"></i>
              </button>-->
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="container">
    <%= paginate @questions %>
  </div>
</div>
