<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header"><%= action_message %></h1>
  </div>
</div>
<hr>
    <div class="panel-body">
      <div class="row">

        <% if @subject.errors.any? %>
          <div class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
            <ul>
              <% @subject.errors.full_messages.each do |message| %>
                <%# debugger %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="col-lg-6">

          <%= form_with(model: [:admins_backoffice, @subject]) do |form| %>

            <div class="form-group">
              <%= form.label :description %>
              <%= form.text_field :description, class:"form-control", placeholder:"Descrição do Assunto/Área" %>
            </div>

            <button type="submit" class="btn btn-primary">Salvar</button>
          <% end %>

        </div>

      </div>

    </div>
